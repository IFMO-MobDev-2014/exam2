<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TableRow
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Artist"
                    android:id="@+id/textView"
                    style="@style/Content.UsualText"
                    android:layout_margin="10dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/artistEditText"/>
        </TableRow>
        <TableRow
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Content.UsualText"
                    android:layout_margin="10dp"
                    android:text="Song name"
                    android:id="@+id/textView2"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sengEditText"/>
        </TableRow>
    </TableLayout>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_rap"
                 android:text="Rap"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_rock"
                 android:text="Rock"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_alternative"
                 android:text="Alternative"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_raggie"
                 android:text="Raggie"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_country"
                 android:text="Country"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_soul"
                 android:text="Soul"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_electronic"
                 android:text="Electronic"/>
    <RadioButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/button_pop"
                 android:text="Pop"/>
</LinearLayout>
